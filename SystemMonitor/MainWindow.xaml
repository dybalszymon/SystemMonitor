<Window x:Class="SystemMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        
        Title="System Monitor Pro" Height="600" Width="450"
        Background="#F5F5F7">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Pulpit Zasobów" FontSize="26" FontWeight="Bold" 
                   Foreground="#333" Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Sensors}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        
                        <Border Background="White" CornerRadius="12" Margin="0,0,0,15" Padding="15">
                            <Border.Effect>
                                <DropShadowEffect Color="#E0E0E0" BlurRadius="15" ShadowDepth="3" Direction="270"/>
                            </Border.Effect>
                            
                            <StackPanel>
                                <Grid Margin="0,0,0,10">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="15" Foreground="#444"/>
                                    <TextBlock Text="{Binding DisplayText}" HorizontalAlignment="Right" 
                                               FontSize="14" Foreground="#007ACC" FontWeight="SemiBold"/>
                                </Grid>

                                <lvc:CartesianChart
                                    Series="{Binding Series}"
                                    XAxes="{Binding XAxes}"
                                    YAxes="{Binding YAxes}"
                                    Height="60"
                                    Margin="0,5,0,0">
                                </lvc:CartesianChart>
                                
                            </StackPanel>
                        </Border>
                        
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>